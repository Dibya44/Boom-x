<body>

  <h1>Mines Game</h1>
  <div id="score">Score: 0</div>
  <div id="grid"></div>
  <button onclick="initGame()">Restart</button>

  <script>
    const grid = document.getElementById('grid');
    const scoreDisplay = document.getElementById('score');
    let bombPositions = [];
    let score = 0;
    let gameOver = false;

    function initGame() {
      grid.innerHTML = '';
      score = 0;
      gameOver = false;
      scoreDisplay.textContent = "Score: 0";

      // Random bomb positions
      bombPositions = [];
      while (bombPositions.length < 2) {
        let r = Math.floor(Math.random() * 25);
        if (!bombPositions.includes(r)) {
          bombPositions.push(r);
        }
      }

      // Create 25 boxes
      for (let i = 0; i < 25; i++) {
        const box = document.createElement('div');
        box.classList.add('box');
        box.dataset.index = i;

        box.addEventListener('click', () => handleClick(box, i));
        box.addEventListener('touchstart', () => handleClick(box, i));

        grid.appendChild(box);
      }
    }

    function handleClick(box, index) {
      if (gameOver || box.classList.contains('safe')) return;

      if (bombPositions.includes(index)) {
        box.classList.add('bomb');
        box.textContent = 'üí£';
        gameOver = true;
        alert("üí• Boom! Game Over. Score: " + score);
      } else {
        box.classList.add('safe');
        box.textContent = '‚≠ê';
        score++;
        scoreDisplay.textContent = "Score: " + score;
      }
    }

    initGame();
  </script>

</body>
